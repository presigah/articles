<%= form_with model: @article do |form| %>

    <% if @article.errors.any? %>
        <p> <%= t 'article.errors'%></p>
    <% end %>

    <div class="container">
        <div class="container">
            <div>
                <%= form.label :title %> <br>
                <%= form.text_field :title, class:'form-control', placeholder:'Article`s title' %>
                <% if @article.errors[:title].any? %>
                    <div> <%= @article.errors[:title].first %></div>
                <% end %> 
            </div>
        <div>
            <%= form.label :body %> <br>
            <%= form.text_area :body, class:'form-control', placeholder:'Article`s Abstract'%> 
            <% if @article.errors[:body] %>
                <div> <%= @article.errors[:body].first %></div>
            <% end %>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-8">
                    <div>
                    <%= form.label :logo %> <br>
                    <%= form.file_field :logo, class:'form-control', type:'file' %> 
                    </div>
                </div>
                <div class="col-4">
                    <div>
                    <%= form.label :category %> <br>
                    <%= form.select :category, ["Science", "Art", "Enviroment", "Thriller"], {}, class:'form-control' %>
                    </div>
                </div>
            </div>
        </div>
        <hr>
    </div>

    <div>
        <%= form.label :description %> <br>
        <%= form.rich_text_area :description %> 
    </div>
    <br><br>
    
    <div class='container'>
        <%= form.submit class:'btn btn-outline-dark'%>
    </div>

<% end %>