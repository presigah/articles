<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class='container' style='display: block'>
      <hr>
      <h3> Madakaing nav</h3>
      <% if user_signed_in? %>
        <div class='container' style='display:block'>
        <h4> Bienvenido <%= current_user.name %></h4>
        <%= link_to('Index', root_path, class: 'btn btn-primary') %>
        <%= link_to('logout', logout_path, class: 'btn btn-primary') %>
        <%= link_to('Articles', articles_path, class: 'btn btn-primary') %>
        </div>
      <% else %>
      <%= link_to('Login', login_path , class: 'btn btn-primary') %>
      <%= link_to('Signup', signup_path , class: 'btn btn-primary') %>
      <%= link_to('Articles', articles_path, class: 'btn btn-primary') %>
      <% end %>
    </div>
    <hr>
    <%= yield %>
  </body>
</html>
